<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dmd.admin.mapper.UmsCoachMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dmd.admin.model.domain.UmsCoach">
    <result column="id" property="id" />
    <result column="creator" property="creator" />
    <result column="creator_id" property="creatorId" />
    <result column="created_time" property="createdTime" />
    <result column="last_operator" property="lastOperator" />
    <result column="last_operator_id" property="lastOperatorId" />
    <result column="update_time" property="updateTime" />
        <result column="open_id" property="openId" />
        <result column="coach_name" property="coachName" />
        <result column="nick_name" property="nickName" />
        <result column="password" property="password" />
        <result column="icon" property="icon" />
        <result column="phone" property="phone" />
        <result column="gender" property="gender" />
        <result column="coach_grade" property="coachGrade" />
        <result column="invitation_code" property="invitationCode" />
        <result column="total_invitation" property="totalInvitation" />
        <result column="status" property="status" />
        <result column="personal_album" property="personalAlbum" />
        <result column="personal_profile" property="personalProfile" />
        <result column="growth" property="growth" />
        <result column="certificate_pic" property="certificatePic" />
        <result column="failure_reason" property="failureReason" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        creator,
        creator_id,
        created_time,
        last_operator,
        last_operator_id,
        update_time,
        open_id, coach_name, nick_name, password, icon, phone, gender, coach_grade, invitation_code, total_invitation, status, personal_album, personal_profile, growth, certificate_pic, failure_reason
    </sql>
    <sql id="Base_List">
        id,
        created_time,
        coach_name, nick_name, icon, phone, gender, coach_grade, invitation_code, status, personal_album, personal_profile, certificate_pic
    </sql>
    <select id="selectCoachList" resultType="com.dmd.admin.model.vo.UmsCoachVo">
        select <include refid="Base_List"/>
        from ums_coach where 1 = 1
        <if test="username != null">
            and coach_name like '%${username}%'
        </if>
        <if test="nickName != null">
            and nick_name like '%${nickName}%'
        </if>
        <if test="createTime != null">
            and to_days(created_time) = to_days(#{createTime})
        </if>
        order by created_time desc
    </select>
    <select id="selectCoachByStatus" resultType="com.dmd.admin.model.vo.UmsCoachVo">
        select <include refid="Base_List"/>
        from ums_coach
        where status = 1
        order by status
    </select>

</mapper>
