<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dmd.mall.mapper.IntegralGiftSpeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="integralGiftsMap" type="com.dmd.mall.model.domain.IntegralGiftsSpeBean">
        <result column="id" property="id" />
        <result column="giftId" property="giftId" />
        <result column="specStock" property="specStock" />
        <result column="size" property="size" />
        <result column="color" property="color" />
    </resultMap>

    <select id="queryIntegralGiftsSpeById" parameterType="java.lang.Long" resultMap="integralGiftsMap">
        SELECT
          size,
          specStock,
          giftId,
          color
        FROM
          dmd_integral_gift_spe
        WHERE
          giftId = #{id}
    </select>

    <select id="selectIntegralGiftsSpecStock" parameterType="map" resultType="java.lang.Integer">
        SELECT SUM(specStock) FROM dmd_integral_gift_spe
        <include refid="giftsWhere"></include>
    </select>
    <sql id="giftsWhere">
        <where>
            <!-- 根据尺码查询 -->
            <if test="size !=null and size != ''">
                and size = #{size}
            </if>
            <!-- 根据颜色查询 -->
            <if test="color !=null and color != ''">
                and color = #{color}
            </if>
            and giftId = #{id}
        </where>
    </sql>

</mapper>